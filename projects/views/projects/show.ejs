<h1><%= project.naziv %></h1>
<p>Opis:<%= project.opis %></p>
<p>Cijena: <%= project.cijena %></p>
<p>Poslovi: <%= project.poslovi %></p>

<h3>Članovi</h3>
<ul>
<% project.clanovi.forEach(c => { %>
<li><%= c %></li>
<% }) %>
</ul>

<form method="POST" action="/projects/<%= project._id %>/add-member">
<input name="clan">
<button>Dodaj člana</button>
</form>

<form method="POST" action="/projects/<%= project._id %>/delete">
<button>Obriši</button>
</form>

<p><a href="/projects/<%= project._id %>/edit">Uredi projekt</a></p>

<a href="/projects">Nazad</a>
